{
  "name": "niong-commerce-api",
  "version": "0.0.0",
  "description": "NestJs Ionic Angular ECommerce API",
  "author": "Luis Vargas <luisvargastijerino@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dc:start:dbs": "docker-compose up mongo",
    "dc:down": "docker-compose down -v --remove-orphans",
    "dc:restart:dbs": "npm run dc:down && npm run dc:start:dbs",
    "docker:stop:all": "docker stop $(docker ps -q)"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/platform-socket.io": "^7.4.2",
    "@nestjs/websockets": "^7.4.2",
    "antlr4ts": "^0.5.0-alpha.3",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express-jwt": "^6.0.0",
    "is-not-empty": "^0.1.0",
    "moment": "^2.27.0",
    "mongodb": "^3.6.0",
    "mongoose": "^5.9.27",
    "nestjs-typegoose": "^7.1.30",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "typescript": "^3.9.7",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.4.2",
    "@types/bcrypt": "^3.0.0",
    "@types/bson": "^4.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-jwt": "0.0.41",
    "@types/jest": "^26.0.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.34",
    "@types/node": "^14.0.27",
    "@types/socket.io": "^2.1.10",
    "@types/supertest": "^2.0.10",
    "@typegoose/typegoose": "^7.3.1",
    "@types/validator": "^13.1.0",
    "antlr4ts-cli": "^0.5.0-alpha.3",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
